+void freesatEITSubtableStatus::initMap(__u8 maxSection)
+{
+	if(enable_freesat)
+	{
+		int i, maxSectionIdx = maxSection / 8;
+		for (i = 0; i < 32; i++)
+		{
+			sectionMap[i] = (i <= maxSectionIdx ? 0x0100 : 0x0000 );
+		}
+	}
