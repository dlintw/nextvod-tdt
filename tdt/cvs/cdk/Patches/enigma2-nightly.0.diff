+	switch (voltage)
+	{
+	case voltageOff:
+		m_data[CSW]=m_data[UCSW]=m_data[TONEBURST]=-1; // reset diseqc
+		vlt = SEC_VOLTAGE_OFF;
+		break;
+	case voltage13_5:
+#if HAVE_DVB_API_VERSION < 3
+		vlt = SEC_VOLTAGE_13_5;
+		break;
+#else
+		increased = true;
+#endif
+	case voltage13:
+		vlt = SEC_VOLTAGE_13;
+		break;
+	case voltage18_5:
+#if HAVE_DVB_API_VERSION < 3
+		vlt = SEC_VOLTAGE_18_5;
+		break;
+#else
+		increased = true;
+#endif
+	case voltage18:
+		vlt = SEC_VOLTAGE_18;
+		break;
