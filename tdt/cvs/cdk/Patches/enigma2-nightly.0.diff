+                                        fcntl.ioctl(fd.fileno(), ioIconCmd, ioRecBothOff)
+
+                        fd.close()
+                except IOError,e:
+                        if debug:
+                                print "TopfieldVFD: gotRecordEvent ", e
+                self.recNum = nrecs
+
+        def shutdown(self):
+                self.abort()
+
+        def abort(self):
+                print "TopfieldVFD aborting"
+
+def main(session, **kwargs):
