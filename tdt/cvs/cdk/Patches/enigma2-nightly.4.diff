+
+bool freesatEITSubtableStatus::isCompleted()
+{
+	if(enable_freesat)
+	{
+		__u32 i = 0;
+		__u8 calc;
+
+		while ( i < 32 )
+		{
+			calc = sectionMap[i] >> 8;
+			if (! calc) return true; // Last segment passed
+			if (calc ^ ( sectionMap[i] & 0xFF ) ) // Segment not fully found
+				return false;
+			i++;
+		}
+		return true; // All segments ok
+	}
