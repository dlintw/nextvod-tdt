+bool freesatEITSubtableStatus::isSectionPresent(__u8 sectionNo)
+{
+	if(enable_freesat)
+	{
+		__u8 sectionIdx = sectionNo / 8;
+		__u8 bitOffset = sectionNo % 8;
+	
+		return ((sectionMap[sectionIdx] & (1 << bitOffset)) != 0);
+	}
