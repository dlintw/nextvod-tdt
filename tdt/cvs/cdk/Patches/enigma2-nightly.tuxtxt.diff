+		case 0x57:
+			// TODO : arabic
+			break;
+		case 0x55:
+			// TODO : hebrew
+			break;
+
+	}
+
+	debugf(20, "%s: <\n", __func__);
+	
+	return countryconversiontable[sec & 0x07];
+}
