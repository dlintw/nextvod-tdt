+int tuxtxt_next_hex(int i) /* return next existing non-decimal page number */
+{
+	int startpage = i;
+	if (startpage < 0x100)
+		startpage = 0x100;
+
+	do
+	{
+		i++;
+		if (i > 0x8FF)
+			i = 0x100;
+		if (i == startpage)
+			break;
+	}  while ((tuxtxt_cache.subpagetable[i] == 0xFF) || tuxtxt_is_dec(i));
+	return i;
+}
