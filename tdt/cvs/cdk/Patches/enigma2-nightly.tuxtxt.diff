+	{
+	    debugf(1, "!!!!!!!!!!!! Failed to create thread !!!!!!!!!!!!11\n");
+	} else
+	    debugf(1, "!!!!!!!!!!!! create thread !!!!!!!!!!!!11\n");
+
+	do {
+		/* update page or timestring and lcd */
+		RenderPage();
+
+		blit();
+	
+		if (GetRCCode() == 1)
+		{
+#if TUXTXT_DEBUG
+			printf("transpmode=%d\n", transpmode);
+#endif
+			if (transpmode == 2) /* TV mode */
+			{
+				switch (RCCode)
+				{
+				case RC_OK:
+					continue; /* otherwise ignore key */
+				case RC_UP:
+				case RC_DOWN:
+				case RC_0:
+				case RC_1:
+				case RC_2:
+				case RC_3:
+				case RC_4:
+				case RC_5:
+				case RC_6:
